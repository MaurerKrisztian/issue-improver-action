{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "lib": ["es6"],
    "outDir": "build",
    "rootDir": "./lib",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "removeComments": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true
  },
  "exclude": ["build", "node_modules", "**/*.spec.ts", "test/**", "examples", "jest.config.ts"],
  "include": ["./lib/**/*"]
}
